<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-inverse" role="navigation">
      <ul class="nav navbar-nav">
        <li><%=link_to "Home", home_index_path%></li>
        <li><%=link_to "Categories", categories_path%></li>
        <li><%=link_to "Products", products_path%></li>
        <li><%= link_to "About", home_about_path%></li>
        <li><%= link_to "Contact", home_contact_path%></li>
      </ul>
      <ul class="nav navbar-right navbar-nav" style="margin: 0px">
      <% if user_signed_in? %>
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class = "glyphicon glyphicon-user"> </span><%= current_user.username %>
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "<i class = 'glyphicon glyphicon-shopping-cart'></i> Cart".html_safe, cart_line_items_path %></li>
            <li class="divider"></li>
            <li><%= link_to "<i class = 'glyphicon glyphicon-cog'></i> Account Settings".html_safe, edit_user_registration_path %></li>
            <li><%= link_to "<i class = 'glyphicon glyphicon-log-out'></i> Logout".html_safe, destroy_user_session_path, method: :delete %></li>
          </ul>
        </li>
      <% else %>
        <li><%= link_to "<i class = 'glyphicon glyphicon-log-in'></i> Login".html_safe, new_user_session_path %></li>
        <li><%= link_to "<i class = 'glyphicon glyphicon-user'></i> Register".html_safe, new_user_registration_path %></span></li>
      <% end %>
      </ul>
    </nav>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <!--<% if @notice %>
    <script>alert(<%= @notice %>)</script>
    <% end %>-->
    <%= yield %>
  </body>
</html>
