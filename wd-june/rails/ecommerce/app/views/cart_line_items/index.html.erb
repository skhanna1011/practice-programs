<h2>Cart</h2>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Product</th>
      <th>Quantity</th>
      <th>Total</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_line_items.each do |cart_line_item| %>
  <tbody>
    <tr>
      <td><em style="font-size: 20px;"><%= cart_line_item.product.name%></em><br/>&#8377;<%= cart_line_item.product.price%></td>
      <td><%= form_for cart_line_item do |f|%>
        <%= f.select :quantity, (1..10).to_a %>
        <%= f.submit "Update", class:"btn"%>
      <% end%></td>
      <td>&#8377;<%= amount = cart_line_item.quantity * cart_line_item.product.price %><%@cart_total += amount %></td>
      <td><%= link_to "<i class = 'glyphicon glyphicon-trash'></i> Delete".html_safe, cart_line_item_path(cart_line_item.id), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-danger"%></td>
    </tr>
  <% end %></tbody>
</table>
<h3>Cart Total:</h3><h4 style="font-weight: bold; "><%= @cart_total%></h4>