<h2>Add User</h2>
<%= form_for @user do |f| %>
  <div class="field">
    <label>Email:</label>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <label>Password:</label>
    <%= f.text_field :password %>
  </div>
  <div class="field">
    <label>Select Roles</label>
    <%= f.collection_check_boxes :role_ids, Role.all, :id, :name, prompt: "Select Role"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<%end%>