<h2>Enter City name</h2>
<%= form_tag(weather_search_path, method: :get) do %>
  <div class="field">
    <label>City:</label><br/>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="action">
    <%= submit_tag "Search" %>
  </div>
<% end %>
<% if !@result.nil? %>
  <h3>The temperature in <%= params[:name] %> is <%= @result["main"]["temp"]%>&#8451;</h3>
<% end %>