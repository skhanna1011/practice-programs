<h2>Enter Name</h2>
<%= form_tag(gender_search_path, method: :get) do %>
  <div class="field">
    <label>Name:</label><br/>
    <%= text_field_tag :name, params[:name] %>
  </div>
  <div class="action">
    <%= submit_tag "Search" %>
  </div>
<% end %>
<% if !@result.nil? %>
  <h3>The gender of <%= params[:name] %> is <%= @result["gender"]%></h3>
<% end %>